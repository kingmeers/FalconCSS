%html
    %head
        %link{:type=>"text/css", :href=>"stylesheets/css/main.css", :rel=>"stylesheet"}
        %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1"}

        %title
            FalconCSS | Examples
    %body
        %h1{:class=>"fal-text-center fal-text-underline fal-text-center"} FalconCSS

        %h2 Typography
        .fal-row
            %h1{:class=>"fal-text-overline"} Heading 1
            %h2 Heading 2
            %h3{:class=>"fal-text-right"} Heading 3
            %h4 Heading 4
            %h5{:class=>"fal-text-line-through"} Heading 5
            %h6 Heading 6

            %p Hi! I'm a paragraph!


        %h2 Grid System
        .grid
            .fal-row{:class=>"fal-text-center"}
                - 4.times do
                    %div{:class=>"fal-col-lg-3 fal-col-md-6 fal-col-xs-12 fal-outline"}
                        %p fal-col-lg-3 fal-col-md-6 fal-col-xs-12

            - $columns = 12
            - (1..$columns).each do |n|
                .fal-row{:class=>"fal-text-center"}
                    - (1..($columns/n)).each do |m|
                        %div{:class=>"fal-col-lg-#{n} fal-col-md-#{n} fal-col-xs-#{n} fal-outline"}
                            %p fal-col-lg-#{n} fal-col-md-#{n} fal-col-xs-#{n}
                    - if($columns%n != 0)
                        %div{:class=>"fal-col-lg-#{$columns%n} fal-col-md-#{$columns%n} fal-col-xs-#{$columns%n} fal-outline"}
                            %p fal-col-lg-#{$columns%n} fal-col-md-#{$columns%n} fal-col-xs-#{$columns%n}
